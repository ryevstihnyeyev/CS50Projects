
<h1>Add a New Project</h1>

<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :project_title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :author_email %>
  </div>
  <div class="field">
    <%= f.label :project_description %><br />
    <%= f.text_area :contents, :size => "60x12" %>
  </div>
  <div class="actions">
    <%= f.submit "Add Project!" %>
  </div>
<% end %>
